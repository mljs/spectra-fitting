{
  "name": "ml-spectra-fitting",
  "version": "2.0.0",
  "description": "Fit spectra using gaussian or lorentzian",
  "main": "lib/index.js",
  "module": "src/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "cheminfo-build --entry src/index.js --root SpectraFitting",
    "eslint": "eslint src",
    "eslint-fix": "npm run eslint -- --fix",
    "compile": "rollup -c",
    "prepublishOnly": "npm run compile",
    "test": "npm run test-coverage && npm run eslint",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test-coverage": "jest --coverage",
    "test-only": "jest",
    "debug": "npm run prepublishOnly && node src/debug.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mljs/spectra-fitting.git"
  },
  "keywords": [
    "Optimization",
    "Lorentzian",
    "Gaussian",
    "pseudovoigt"
  ],
  "author": "Andres Castillo",
  "contributors": [
    "J. Alejandro Bola√±os A. <jobo322>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mljs/spectra-fitting/issues"
  },
  "homepage": "https://github.com/mljs/spectra-fitting",
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@types/jest": "^27.0.2",
    "cheminfo-build": "^1.1.11",
    "eslint": "^7.32.0",
    "eslint-config-cheminfo": "^5.6.0",
    "esm": "^3.2.25",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "rollup": "^2.58.0",
    "spectrum-generator": "^6.0.0"
  },
  "dependencies": {
    "ml-array-max": "^1.2.3",
    "ml-levenberg-marquardt": "^3.1.1",
    "ml-peak-shape-generator": "^3.0.1"
  }
}
